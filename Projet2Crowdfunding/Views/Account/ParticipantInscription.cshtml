@model Projet2Crowdfunding.ViewModels.AccountViewModel
@{
    Layout = "_LayoutDuSite";

}
<link rel="stylesheet" type="text/css" href="~/css/Login.css">


<title>Inscription participant</title>

@section Menu
{
    <div class="col-md-8 d-flex justify-content-around">
        <a class="nav-link" id="nav-elements" href="/Home/Index"><strong>HOME</strong></a>
        <a class="nav-link" id="nav-elements" href="/Project/ProjectPage"><strong>DECOUVRIR UN PROJET</strong></a>
        <a class="nav-link" id="nav-elements" href="#"><strong>LANCER UN PROJET</strong></a>
    </div>
    <div class="col-md-2 d-flex justify-content-end align-items-center">
        <a id="bouton-log" href="/Account/LoginPage">SE CONNECTER</a>
    </div>
}


<fieldset>

    <label for="Vous avez déja un compte MACSynergie?">Vous avez déja un compte Macsynergy?</label>
    <a href="/Account/LoginPage" class="btn btn-success">Connectez-vous!</a>
    <br />
    <br />

    <div>

        @Html.LabelFor(model => model.Participant.LastName)
        @Html.TextBoxFor(model => model.Participant.LastName, new { placeholder = "Nom" })
        <br />
        <br />

        @Html.LabelFor(model => model.Participant.FirstName)
        @Html.TextBoxFor(model => model.Participant.FirstName, new { placeholder = "Prénom" })
        <br />
        <br />

        @Html.LabelFor(model => model.Account.Mail)
        @Html.TextBoxFor(model => model.Account.Mail, new { placeholder = "Adresse e-mail" })
        @Html.ValidationMessageFor(model => model.Account.Mail)
        <br>
        <br>

        @Html.LabelFor(model => model.Account.Password)
        @Html.TextBoxFor(model => model.Account.Password, new { placeholder = "Mot de passe" })
        @Html.ValidationMessageFor(model => model.Account.Password)
        <br />
        <br />

        @Html.CheckBoxFor(m => m.Participant.ConfidentialityCharter)
        @Html.LabelFor(model => model.Participant.ConfidentialityCharter, "J'ai lu et j'accepte la politique de confidentialité de Macsynergy")

        <br />
        <br />

        <button id="bouton-log" type="submit">CREER UN COMPTE</button>

    </div>
</fieldset>

@section Footer {}
