@model Projet2Crowdfunding.ViewModels.AccountViewModel
@{
    Layout = "_LayoutDuSite";

}
<link rel="stylesheet" type="text/css" href="~/css/Login.css">
<link rel="stylesheet" type="text/css" href="~/css/Home.css">


<title>Inscription participant</title>

@section Menu
{
    @if (Model.Authentify)
    {
        if (Model.Account.Role == "participant")
        {
            <div class="col-md-8 d-flex justify-content-around">
                <a class="nav-link" id="nav-elements" href="/Home/Index"><strong>HOME</strong></a>
                <a class="nav-link" id="nav-elements" href="/Project/Index"><strong>DECOUVRIR UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/CreateProject/Index"><strong>LANCER UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/Participant/PDashboard"><strong>MON COMPTE</strong></a>
            </div>
            <div class="col-md-2 d-flex justify-content-end align-items-center">
                <a id="bouton-log" href="/Account/Deconnexion">SE DECONNECTER</a>
            </div>
        }
        else if (Model.Account.Role == "po")
        {
            <div class="col-md-8 d-flex justify-content-around">
                <a class="nav-link" id="nav-elements" href="/Home/Index"><strong>HOME</strong></a>
                <a class="nav-link" id="nav-elements" href="/Project/Index"><strong>DECOUVRIR UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/CreateProject/Index"><strong>LANCER UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/ProjectOwner/PODashboard"><strong>MON COMPTE</strong></a>
            </div>
            <div class="col-md-2 d-flex justify-content-end align-items-center">
                <a id="bouton-log" href="/Account/Deconnexion">SE DECONNECTER</a>
            </div>
        }
        else // role == "admin"
        {
            <div class="col-md-8 d-flex justify-content-around">
                <a class="nav-link" id="nav-elements" href="/Home/Index"><strong>HOME</strong></a>
                <a class="nav-link" id="nav-elements" href="/Project/Index"><strong>DECOUVRIR UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/CreateProject/Index"><strong>LANCER UN PROJET</strong></a>
                <a class="nav-link" id="nav-elements" href="/Admin/AdminDashboard"><strong>MON COMPTE</strong></a>
            </div>
            <div class="col-md-2 d-flex justify-content-end align-items-center">
                <a id="bouton-log" href="/Account/Deconnexion">SE DECONNECTER</a>
            </div>
        }
    }
    else
    {
        <div class="col-md-8 d-flex justify-content-around">
            <a class="nav-link" id="nav-elements" href="/Home/Index"><strong>HOME</strong></a>
            <a class="nav-link" id="nav-elements" href="/Project/Index"><strong>DECOUVRIR UN PROJET</strong></a>
            <a class="nav-link" id="nav-elements" href="/CreateProject/Index"><strong>LANCER UN PROJET</strong></a>
        </div>
        <div class="col-md-2 d-flex justify-content-end align-items-center">
            <a id="bouton-log" href="/Account/LoginPage">SE CONNECTER</a>
        </div>
    }
}  




<div class="my-5">
    <fieldset style="margin : auto">

        <div class="mode-vert">
            <h6 style="font-size: 30px; color:dimgray">CRÉATION D'UN COMPTE PARTICIPANT</h6>
            <br />
        </div>

        @using (Html.BeginForm())
        {

            <div class="border-MACS pt-1 p-lg-5 pr-5 pb-5">

                @Html.LabelFor(model => model.Participant.LastName) <span> &nbsp;</span>
                @Html.TextBoxFor(model => model.Participant.LastName)
                <br />
                <br />

                @Html.LabelFor(model => model.Participant.FirstName) <span> &nbsp;</span>
                @Html.TextBoxFor(model => model.Participant.FirstName)
                <br />
                <br />

                @Html.LabelFor(model => model.Account.Mail) <span> &nbsp;</span>
                @Html.TextBoxFor(model => model.Account.Mail)
                <div class="text-danger">
                    @Html.ValidationMessageFor(model => model.Account.Mail)
                </div>

                <br>


                @Html.LabelFor(model => model.Account.Password) <span> &nbsp;</span>
                @Html.PasswordFor(model => model.Account.Password)
                <div class="text-danger">
                    @Html.ValidationMessageFor(model => model.Account.Password)
                </div>

            </div>

            <br /><br />

            @Html.CheckBoxFor(m => m.Participant.ConfidentialityCharter)
            @Html.LabelFor(model => model.Participant.ConfidentialityCharter, "J'ai lu et j'accepte la politique de confidentialité de Macsynergy")
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Participant.ConfidentialityCharter)
            </div>

            <br /><br />

            <button id="bouton-log" type="submit">CREER UN COMPTE</button>

        }


    </fieldset>
</div>



@section Footer {}
