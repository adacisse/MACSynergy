<!-- The summaryModal -->
<div class="modal" id="summaryModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header clearfix">
                <div class="mx-auto"><h3>Résumé</h3></div>
                <span class="float-end"><button type="button" class="btn-close" data-bs-dismiss="modal"></button></span>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center border rounded-3 p-3">
                                <div class="panel-body">
                                    @Html.HiddenFor(m => m.Project.Id)
                                    <fieldset class="d-grid">
                                        @Html.TextAreaFor(m => m.Project.Summary, new { @class = "form-control input-lg mt-2", placeholder = "Résumé", rows = "4" })
